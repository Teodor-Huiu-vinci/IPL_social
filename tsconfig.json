{
    "compilerOptions" : {
        "target" : "ES2020",
        "module": "CommonJS",
        "lib": ["es2020"],
        "types": ["jest","node"],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "moduleDetection": "force",
        "rootDir":"./src",
        "outDir" : "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule" : true,

    },
    "include": ["src/**/*","tests/**/*"],
    "exclude" : ["node_modules","tests","dist"]
}